{
  "name": "Node-training",
  "version": "1.0.0",
  "description": "An app with an extensive Express setup",
  "engines": {
    "node": "6.x"
  },
  "scripts": {
    "start": "node \"src/server/app.js\"",
    "dev": "cross-env NODE_ENV=local nodemon --inspect \"src/server/app.js\" --exec \"npm run lint-fix && npm run lint && node\"",
    "lint": "eslint . --ignore-path .gitignore",
    "lint-fix": "eslint --fix . --ignore-path .gitignore",
    "integration-test": "cross-env NODE_ENV=test mocha \"test/integration\" --exit --timeout 30000",
    "unit-test": "cross-env NODE_ENV=test nyc mocha \"src/**/*spec.js\" --timeout 30000",
    "pretest": "npm run lint",
    "test": "npm run unit-test && npm run integration-test"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.16.2",
    "express-session": "^1.14.2",
    "helmet": "^3.1.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg-promise": "^6.10.3",
    "pino": "^4.8.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "cross-env": "^5.0.5",
    "dotenv": "^4.0.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.7.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "nyc": "^11.3.0",
    "sinon": "^4.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ],
    "all": true,
    "reporter": [
      "html"
    ],
    "report-dir": "./test/coverage"
  }
}
